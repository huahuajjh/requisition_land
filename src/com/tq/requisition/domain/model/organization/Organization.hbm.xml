<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.tq.requisition.domain.model.organization">

    <class name="Organization" table="tb_org">
        <id name="id" column="id" type="org.hibernate.type.UUIDCharType">
        	<generator class="assigned"></generator>
        </id>
		<property name="del" column="is_del" type="boolean" not-null="true" />
		<property name="orgName" column="org_name" type="string" not-null="true"  unique="true"/>
		<property name="orgNumber" column="org_number" type="string"  length="30" not-null="true"  unique="true"/>
			
    </class>

</hibernate-mapping>