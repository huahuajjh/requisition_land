<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory name="hb_foo">
		<!-- mysql驱动 -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- mysql连接字符串 -->
		<property name="connection.url">jdbc:mysql://120.27.148.138:3306/db_requisition_land</property>
		<!-- mysql数据库用户名 -->
		<property name="connection.username">root</property>
		<!-- mysql数据库密码 -->
		<property name="connection.password">huahuajjh3</property>
		<!-- mysql连接编码 -->
		<property name="connection.characterEncoding">utf-8</property>
		<!-- 关闭二级缓存 -->
		<property name="cache.use_second_level_cache">false</property>
		<!-- 设置current session -->
		<!-- <property name="current_session_context_class">thread</property> -->
		<!-- 设置hibernate语句到了50条发送 -->
		<property name="hibernate.jdbc.batch_size">50</property>

		<!-- c3p0连接池 -->
		<!-- 指定c3p0连接类 -->
		<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
		<!-- 设置最小的数据库连接数 -->
		<property name="hibernate.c3p0.min_size">5</property>
		<!-- 设置最大的数据库连接数 -->
		<property name="hibernate.c3p0.max_size">20</property>
		<!-- 设置数据库连接超时时间，超时之后会将连接释放掉 -->
		<property name="hibernate.c3p0.timeout">1800</property>
		<!-- 数据库空闲测试连接周期，mysql默认8小时主动断开inactive的连接，设立此值会在指定的时间周期性的发送一个数据库语句保证连接的有效性 -->
		<property name="hibernate.c3p0.idle_test_period">25200</property>

		<!-- 实体mapping -->
		<!-- 账户hbm -->
		<mapping resource="com/tq/requisition/domain/model/account/Account.hbm.xml" />
		<!-- 角色hbm -->
